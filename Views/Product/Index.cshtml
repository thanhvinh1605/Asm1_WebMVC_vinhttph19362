@model IEnumerable<Asm1_WebMVC_vinhttph19362.Models.Product>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Add" class="btn btn-primary">Create Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
